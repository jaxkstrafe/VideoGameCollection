@page
@model VideoGameUI.Pages.NewReleases.IndexModel
@{
}
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SFA VIDEOGAME COLLECTION</title>
    <link rel="stylesheet" href="~/css/NewReleases.css">
</head>
<body>
    <div class="title_cover">
        <div class="title_content">
            <button class="title_button"><a href="/LoginPage/LoginSignUp">LOG IN / SIGN UP</a></button>
            <h1 class="title_text">WELCOME TO SFA VIDEO GAME COLLECTION!</h1>
        </div>
    </div>

    <nav class="nav_bar">
        <div class="navbar_container">
            <div class="nav_menu">
                <ul class="navbar_menu">
                    <li class="navbar__item">
                        <a href="/" class="navbar_links">Home</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/GamesCollection/GamesCollection" class="navbar_links">Games</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/CommunityRatings/CommunityRatings" class="navbar_links">Community Ratings</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/NewReleases/NewReleases" class="navbar_links">Upcoming Releases</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/UserLists/UserLists" class="navbar_links">Public Lists</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="main_content">
        @foreach (var obj in Model.VideoGames)
        {
            <div class="">
                <div class="game_image">
                    <img src="@obj.GameImageURL" width="500" height="400" class="game_image">
                </div>
                <div class="game_content">
                    <div class="game_row">
                        <div class="game-title">
                            <center><h1>@obj.GameTitle</h1></center>
                        </div>
                        <div class="game-price">
                            <h3>Game Price: $@obj.Price</h3>
                        </div>
                        <div class="game-release">
                            <h3>Release Date: @obj.RelaseDate</h3>
                        </div>
                        <div class="game-rating">
                            <h3>Critic Average: @obj.CriticAverage</h3>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>