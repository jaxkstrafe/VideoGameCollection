@page
@model VideoGameUI.Pages.UserLists.IndexModel
@{
}
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SFA VIDEOGAME COLLECTION</title>
    <link rel="stylesheet" href="~/css/UserLists.css" />
</head>
<body>
    <div class="title_cover">
        <div class="title_content">
            <button class="title_button"><a href="/LoginPage/LoginSignUp">LOG IN / SIGN UP</a></button>
            <h1 class="title_text">WELCOME TO SFA VIDEO GAME COLLECTION!</h1>
        </div>
    </div>

    <nav class="nav_bar">
        <div class="navbar_container">
            <div class="nav_menu">
                <ul class="navbar_menu">
                    <li class="navbar__item">
                        <a href="/" class="navbar_links">Home</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/GamesCollection/GamesCollection" class="navbar_links">Games</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/CommunityRatings/CommunityRatings" class="navbar_links">Community Ratings</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/NewReleases/NewReleases" class="navbar_links">New Releases</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/UserLists/UserLists" class="navbar_links">Public Lists</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="main_content">
        <div class="main_container">
            <div class="btnContainer">
                <button class="createListBtn"><a href="CreateList">Create Your List</a></button>
            </div>
            @foreach (var obj in Model.UserLists)
            {
                <div class="">
                    <div class="game_content">
                        <div class="game_row">
                            <div class="game_title">
                                <h1 class="gameTitle">@obj.ListName</h1>
                            </div>
                            <div class="data_container">
                                <div class="game_data">
                                    <h2 class="dataText">Game: $@obj.VideoGameID</h2>
                                </div>
                                <div class="game_data">
                                    <h2 class="dataText">Created: @obj.Created.ToString("MM/dd/yyyy")</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
