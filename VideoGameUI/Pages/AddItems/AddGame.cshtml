@page
@model VideoGameUI.Pages.AddItems.AddGameModel
@{
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <label for="inputGameTitle" class="col-sm-2 col-form-label">Game Title:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputGameTitle" asp-for="NewVideoGame.GameTitle" />
        </div>
    </div>
        <div class="row mb-3">
        <label for="inputReleaseDate" class="col-sm-2 col-form-label">Release Date:</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="inputReleaseDate" asp-for="NewVideoGame.RelaseDate"/>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPrice" class="col-sm-2 col-form-label">Game Price:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPrice" asp-for="NewVideoGame.Price" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="ddlPlatform" class="col-sm-2 col-form-label">Platform:</label>
        <div class="col-sm-10">
            <select asp-for="NewVideoGame.VideoGameID" asp-items="@Model.PlatFormList" id="ddlPlatform"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputCriticAverage" class="col-sm-2 col-form-label">Critic Average:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputCriticAverage" asp-for="NewVideoGame.CriticAverage"/>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputUserAverage" class="col-sm-2 col-form-label">User Average:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputUserAverage" asp-for="NewVideoGame.UserAverage" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="ddlESRB" class="col-sm-2 col-form-label">ESRB Rating:</label>
        <div class="col-sm-10">
            <select asp-for="NewVideoGame.VideoGameID" asp-items="@Model.ESRBRating" id="ddlESRB"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label for="ddlDeveloper" class="col-sm-2 col-form-label">Developer:</label>
        <div class="col-sm-10">
            <select asp-for="NewVideoGame.VideoGameID" asp-items="@Model.DeveloperList" id="ddlDeveloper"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label for="ddlPublisher" class="col-sm-2 col-form-label">Publisher:</label>
        <div class="col-sm-10">
            <select asp-for="NewVideoGame.VideoGameID" asp-items="@Model.PublisherList" id="ddlPublisher"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputGameImageURL" class="col-sm-2 col-form-label">Game Image:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputGameImageURL" asp-for="NewVideoGame.GameImageURL" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Genre</label>
        <div class="col-sm-10">
            @for (var i = 0; i < Model.GenreList.Count(); i++)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="GenresSelected" checked="@Model.GenreList[i].Selected" id="@Model.GenreList[i].Text" value="@Model.GenreList[i].Value" />
                    <label class="form-check-label" for="@Model.GenreList[i].Text">@Model.GenreList[i].Text</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary" onclick="return validateInput()">Add Game</button>
</form>
