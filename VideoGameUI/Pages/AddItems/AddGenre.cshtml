@page
@model VideoGameUI.Pages.AddItems.AddGenreModel
@{
}
<script type="text/javascript">
    function validateInput() {
        var isValid = true;
        var genreName = document.getElementById("inputGenreName");
        if (genreName.value === "") {
            document.getElementById("genreNameError").innerHTML = "Genre Name is required.";
            isValid = false;
        }
        return isValid;
    }
</script>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <label for="inputGenreName" class="col-sm-2 col-form-label">Genre Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputGenreName" asp-for="NewGenre.GenreName" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary" onclick="return validateInput()">Add Genre</button>
</form>