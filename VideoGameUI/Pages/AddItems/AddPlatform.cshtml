@page
@model VideoGameUI.Pages.AddItems.AddPlatformModel
@{
}
<script type="text/javascript">
    function validateInput() {
        var isValid = true;
        var platformName = document.getElementById("inputPlatformName");
        if (platformName.value === "") {
            document.getElementById("platformNameError").innerHTML = "Platform Name is required.";
            isValid = false;
        }
        return isValid;
    }
</script>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <label for="inputPlatformName" class="col-sm-2 col-form-label">Platform Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPlatformName" asp-for="NewPlatform.PlatformName" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary" onclick="return validateInput()">Add Platform</button>
</form>