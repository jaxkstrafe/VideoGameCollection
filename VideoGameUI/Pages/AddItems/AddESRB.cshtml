@page
@model VideoGameUI.Pages.AddItems.AddESRBModel
@{
    ViewData["Title"] = "Add ESRBRating";
}
<script type="text/javascript">
    function validateInput() {
        var isValid = true;
        var esrbImageURL = document.getElementById("inputESRBImageURL");
        if (esrbImageURL.value === "") {
            document.getElementById("esrbImageURLError").innerHTML = "ESRB ImageURL is required.";
            isValid = false;
        }
        return isValid;
    }
</script>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <label for="inputESRBImageURL" class="col-sm-2 col-form-label">ESRB ImageURL:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputESRBImageURL" asp-for="NewESRB.ESRBImageURL"/>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" onclick="return validateInput()">Add ESRB Rating</button>
</form>